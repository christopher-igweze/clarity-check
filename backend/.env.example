# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=eyJ...
SUPABASE_JWT_SECRET=your-jwt-secret  # If using Clerk JWT template (HS256), set this to that template's signing key.

# OpenRouter
OPENROUTER_API_KEY=sk-or-...

# GitHub OAuth + Webhooks (optional but recommended for production)
# GITHUB_CLIENT_ID=Iv1.xxxxxxxxxxxx
# GITHUB_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# GITHUB_OAUTH_SCOPE="repo read:user user:email"
# GITHUB_OAUTH_STATE_TTL_MINUTES=15
# GITHUB_OAUTH_STATE_SECRET=change-me
# GITHUB_WEBHOOK_SECRET=change-me
# WEBHOOK_REPLAY_WINDOW_SECONDS=600

# Optional: reduce to avoid OpenRouter credit/max_token failures
# LLM_MAX_OUTPUT_TOKENS=4096

# Daytona
DAYTONA_API_KEY=your-daytona-key
DAYTONA_API_URL=https://app.daytona.io/api
# Optional: leave unset to use the org default target.
# If you see "Region us is not available to the organization", set this to a target your org supports.
# DAYTONA_TARGET=eu
# Hardened prebuilt runtime image used for OpenHands DAG node execution.
# DAYTONA_OPENHANDS_RUNTIME_IMAGE=ghcr.io/your-org/clarity-openhands-runtime:2026-02-21
# When true, OpenHands runtime execution fails closed unless the runtime image is configured.
# DAYTONA_OPENHANDS_RUNTIME_IMAGE_ENFORCED=true

# Model overrides (optional â€” defaults are set in config.py)
# MODEL_SCANNER=google/gemini-2.5-pro
# MODEL_PLANNER=anthropic/claude-sonnet-4-5-20250929
# MODEL_BUILDER=deepseek/deepseek-chat
# MODEL_SECURITY=deepseek/deepseek-chat
# MODEL_EDUCATOR=anthropic/claude-sonnet-4-5-20250929

# Tier 1 overrides (optional)
# TIER1_ENABLED=true
# TIER1_ASSISTANT_MODEL=google/gemini-2.5-flash-lite
# TIER1_LOC_CAP=50000
# TIER1_MONTHLY_REPORT_CAP=10
# TIER1_PROJECT_CAP=3
# TIER1_INDEX_TTL_DAYS=30
# TIER1_REPORT_TTL_DAYS=7

# Control-plane persistence/runtime hardening (optional)
# CONTROL_PLANE_USE_SUPABASE=true
# BUILD_STORE_STATE_PATH=.state/build_store.json
# PROGRAM_STORE_STATE_PATH=.state/program_store.json
# PROGRAM_SECRET_ENCRYPTION_SECRET=change-me
# PLATFORM_WEBHOOK_SIGNING_SECRET=change-me
# REDIS_URL=rediss://default:token@your-redis-host:6379
# COORDINATION_FAIL_CLOSED=true
# RUNTIME_WORKER_ENABLED=true
# RUNTIME_WORKER_POLL_SECONDS=0.75
# RUNTIME_WORKER_LEASE_TTL_SECONDS=20
# RUNTIME_CLIENT_TICK_FALLBACK_ENABLED=false
# RUNTIME_WATCHDOG_NUDGE_ENABLED=false
# RUNTIME_WATCHDOG_STALE_SECONDS=45
# RUNTIME_NODE_PARALLELISM=4
# ENFORCE_CAPABILITY_AUTH=true
